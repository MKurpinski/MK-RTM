@model PizzaDelivery
@{
    ViewData["Title"] = "Home Page";
}

<h2>Choose delivery:</h2>
<form asp-action="Index" asp-controller="Home">
    <div class="form-group">
        Destination: 
        <div class="col-md-12">
            <input asp-for="Destination" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6">
            Date:
            <input required type="date" name="RequestedDeliveryDate.DatePart" class="form-control" value=""/>
        </div>
        <div class="col-md-6">
            Time:
            <input required type="time" name="RequestedDeliveryDate.TimePart" class="form-control" value=""/>
        </div>
    </div>
    <button type="submit">Confirm</button>
</form>